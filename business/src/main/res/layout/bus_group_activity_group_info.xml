<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <framework.ideas.common.toolsbar.CustomToolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <include layout="@layout/common_line"/>

    <RelativeLayout
        android:id="@+id/layout_group_icon"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/group_of_head"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <framework.telegram.ui.image.AppImageView
            android:id="@+id/app_image_view_group_icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_toLeftOf="@id/image_view_info_point"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="300"
            fresco:backgroundImage="@color/edeff2"
            fresco:placeholderImage="@drawable/common_holder_one_group"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundAsCircle="true"
             />

        <ImageView
            android:id="@+id/image_view_info_point"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/common_icon_friend_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_group_name"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/the_name_of_the_group_chat"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/app_text_view_group_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="asfasfas11111"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/a2a4a7"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/image_view_info_point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/common_icon_friend_arrow" />
    </LinearLayout>
</LinearLayout>