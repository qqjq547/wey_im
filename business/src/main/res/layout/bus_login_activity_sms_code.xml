<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <framework.ideas.common.toolsbar.CustomToolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="32dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bus_had_sent_sms_code"
            android:textSize="12sp"
            android:textColor="@color/a2a4a7" />

        <TextView
            android:id="@+id/text_view_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="36dp">

            <EditText
                android:id="@+id/edit_text_phone_1"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:inputType="number"
                android:maxLength="1"
                android:lines="1"
                android:background="@drawable/bus_corners_edeff2_trans_6_0"
                android:textCursorDrawable="@drawable/common_drawable_cursor"/>

            <EditText
                android:id="@+id/edit_text_phone_2"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:inputType="number"
                android:maxLength="1"
                android:lines="1"
                android:background="@drawable/bus_corners_edeff2_trans_6_0"
                android:textCursorDrawable="@drawable/common_drawable_cursor"
                android:layout_marginLeft="32dp"/>

            <EditText
                android:id="@+id/edit_text_phone_3"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:inputType="number"
                android:maxLength="1"
                android:lines="1"
                android:background="@drawable/bus_corners_edeff2_trans_6_0"
                android:textCursorDrawable="@drawable/common_drawable_cursor"
                android:layout_marginLeft="32dp"/>

            <EditText
                android:id="@+id/edit_text_phone_4"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:inputType="number"
                android:maxLength="1"
                android:lines="1"
                android:background="@drawable/bus_corners_edeff2_trans_6_0"
                android:textCursorDrawable="@drawable/common_drawable_cursor"
                android:layout_marginLeft="32dp"/>

        </LinearLayout>
        <framework.telegram.ui.text.CountdownButton
            android:id="@+id/btn_count_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"/>

    </LinearLayout>
</LinearLayout>