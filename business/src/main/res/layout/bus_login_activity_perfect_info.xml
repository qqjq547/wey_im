<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <framework.ideas.common.toolsbar.CustomToolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <framework.telegram.ui.image.AppImageView
        android:id="@+id/image_view_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/common_oval_edeff2_120"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundAsCircle="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/bus_login_upload_user"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <framework.telegram.ui.text.EasyEditText
        android:id="@+id/eet"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="36dp"/>

    <TextView
        android:id="@+id/text_view_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/common_corners_trans_d4d6d9_6_0"
        android:gravity="center"
        android:text="@string/common_save"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="15dp" />

    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>