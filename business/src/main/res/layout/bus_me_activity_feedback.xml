<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/all_layout"
    android:orientation="vertical">

    <framework.ideas.common.toolsbar.CustomToolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <include layout="@layout/common_line"/>

    <framework.telegram.ui.text.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/feedback_type"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_text_view_suggest"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="@string/suggest"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_text_view_error"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="@string/error"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_text_view_other"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="@string/other"
            android:textSize="12sp" />


    </LinearLayout>

    <framework.telegram.ui.text.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:text="@string/back_info"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:background="@drawable/common_corners_trans_edeff2_6_0"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/we_ll_get_it_for_you_as_soon_as_possible"
            android:paddingLeft="8dp"
            android:paddingTop="11dp"
            android:paddingRight="8dp"
            android:paddingBottom="11dp"
            android:textCursorDrawable="@drawable/common_drawable_cursor"
            android:maxLength="500"
            android:textColor="@color/black"
            android:textColorHint="@color/a2a4a7"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/a2a4a7"
            android:layout_gravity="right|bottom"
            android:textSize="16sp"
            android:padding="8dp"
            android:text="0"
            android:scaleType="center" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/string_report_picture"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/pick_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout_op"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/common_corners_trans_178aff_6_0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </FrameLayout>


</LinearLayout>