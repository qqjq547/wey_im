<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <framework.ideas.common.toolsbar.CustomToolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <include layout="@layout/common_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edeff2"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="6dp"
        android:text="@string/i_can_be_found_in_the_following_ways"
        android:textColor="@color/a2a4a7"
        android:textSize="12sp" />

    <framework.telegram.business.ui.widget.SwitchButtonView
        android:id="@+id/switch_button_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <framework.telegram.business.ui.widget.SwitchButtonView
        android:id="@+id/switch_button_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edeff2"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="6dp"
        android:text="@string/i_can_be_add_in_the_following_ways"
        android:textColor="@color/a2a4a7"
        android:textSize="12sp" />

    <framework.telegram.business.ui.widget.SwitchButtonView
        android:id="@+id/switch_button_group_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <framework.telegram.business.ui.widget.SwitchButtonView
        android:id="@+id/switch_button_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <framework.telegram.business.ui.widget.SwitchButtonView
        android:id="@+id/switch_button_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <framework.telegram.business.ui.widget.SwitchButtonView
        android:id="@+id/switch_button_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>