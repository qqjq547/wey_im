<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plugin_uexGestureUnlock_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48423D"
    android:paddingTop="40dp">

    <LinearLayout
        android:id="@+id/plugin_uexGestureUnlock_gesture_tip_layout"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp" />

    <FrameLayout
        android:id="@+id/plugin_uexGestureUnlock_gesture_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plugin_uexGestureUnlock_gesture_tip_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:visibility="visible">

        <TextView
            android:id="@+id/plugin_uexGestureUnlock_text_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/c178aff"
            android:padding="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/plugin_uexGestureUnlock_text_other_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/applock_pincode_other_type"
            android:padding="10dp"
            android:textColor="@color/c178aff"
            android:textSize="12sp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
