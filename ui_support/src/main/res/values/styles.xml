    <style name="Toolbar.Ordinary" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/f8f8f8</item>
        <item name="colorPrimaryDark">@color/f8f8f8</item>
        <item name="colorAccent">@color/c178aff</item>
        <!-- 修改toolbar图标的颜色-->
        <item name="android:textColorSecondary">@color/black</item>
        <!--修改toolbar文字颜色-->
        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <style name="Toolbar.Night" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/c178aff</item>
        <!-- 修改toolbar图标的颜色-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--修改toolbar文字颜色-->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="NoSpaceActionBarTheme" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Popup.Night" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@color/night_album_popup_bg</item>
    </style>


