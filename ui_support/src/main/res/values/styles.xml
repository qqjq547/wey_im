        <item name="album.emptyView.textColor">@color/night_album_empty_view</item>
        <item name="item.placeholder">@color/night_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">
            @color/night_item_checkCircle_backgroundColor
        </item>
        <item name="item.checkCircle.borderColor">@color/night_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/night_page_bg</item>
