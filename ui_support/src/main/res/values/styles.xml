<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    //====================================== Theme Ordinary
    ===========================================

    <style name="ImagePicker.Ordinary" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ordinary_primary</item>
        <item name="colorPrimaryDark">@color/ordinary_primary_dark</item>
        <item name="toolbar">@style/Toolbar.Ordinary</item>
        <item name="album.dropdown.title.color">@color/ordinary_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/ordinary_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">
            @color/ordinary_album_dropdown_thumbnail_placeholder
        </item>
        <item name="album.emptyView">@drawable/ic_empty_ordinary</item>
        <item name="album.emptyView.textColor">@color/ordinary_album_empty_view</item>
        <item name="item.placeholder">@color/ordinary_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">
            @color/ordinary_item_checkCircle_backgroundColor
        </item>
        <item name="item.checkCircle.borderColor">@color/ordinary_item_checkCircle_borderColor
        </item>
        <item name="page.bg">@color/ordinary_page_bg</item>
        <item name="bottomToolbar.bg">@color/ordinary_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/ordinary_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/ordinary_bottom_toolbar_apply</item>
        <item name="preview.bottomToolbar.back.textColor">
            @color/ordinary_preview_bottom_toolbar_back_text
        </item>
        <item name="preview.bottomToolbar.apply.textColor">
            @color/ordinary_preview_bottom_toolbar_apply
        </item>
        <item name="listPopupWindowStyle">@style/Popup.Ordinary</item>
        <item name="capture.textColor">@color/ordinary_capture</item>
    </style>


    <style name="Popup.Ordinary" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/ordinary_album_popup_bg</item>
    </style>

    //===================================== Theme Night ==========================================

