<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_corners_trans_ffffff_6_0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:orientation="horizontal"
        android:paddingRight="40dp">

        <TextView
            android:id="@+id/progress_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/c4a4a4a" />

        <TextView
            android:id="@+id/progress_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="@color/c4a4a4a"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/normal_background_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:progressTint="@color/loading_tint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/cancel"
            android:layout_marginTop="11dp"
            android:background="@drawable/common_corners_trans_edeff2_8_0"
            android:textColor="@color/black"
            android:layout_marginBottom="11dp"/>

        <TextView
            android:id="@+id/sure"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:background="@drawable/common_corners_trans_178aff_8_0"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/fine"
            android:visibility="gone"
            android:layout_marginTop="11dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="11dp"/>

    </LinearLayout>


</LinearLayout>