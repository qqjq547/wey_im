<?xml version="1.0" encoding="UTF-8"?>
<framework.telegram.ui.roundview.RoundAngleFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:bottomLeftRadius="12dp"
    app:bottomRightRadius="12dp"
    app:topLeftRadius="12dp"
    app:topRightRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c178aff"
        android:gravity="center"
        android:orientation="vertical">

        <framework.telegram.ui.image.AppImageView
            android:id="@+id/app_image_view_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:backgroundImage="@color/edeff2"
            fresco:fadeDuration="300"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/c0071eb"
            fresco:roundingBorderWidth="4dp" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/waiting_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <framework.telegram.ui.image.AppImageView
            android:id="@+id/waiting_app_image_view_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:backgroundImage="@color/edeff2"
            fresco:fadeDuration="300"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/c303030"
            fresco:roundingBorderWidth="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:drawableTop="@drawable/msg_icon_new_stream_call_audio"
            android:drawablePadding="8dp"
            android:text="@string/to_answer_the"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

</framework.telegram.ui.roundview.RoundAngleFrameLayout>
